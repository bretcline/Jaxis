<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="ConfigFile" value="Device.xml" />
  </appSettings>
  <connectionStrings>
    <!-- SQL Server -->
    <add name="BeverageMonitor" providerName="System.Data.SqlClient" connectionString="server=.\SQLEXPRESS;Integrated Security=true;database=BeverageMonitor;" />
    <!-- <add name="BeverageMonitor" providerName="System.Data.SqlClient" connectionString="server=.;Integrated Security=true;database=BeverageMonitor;"/> -->
    <!-- <add name="BeverageMonitor" providerName="System.Data.SqlClient" connectionString="server=.;Integrated Security=true;database=BeverageMonitor;" / -->
  </connectionStrings>

  <log4net>
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message %newline" />
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level - %message %newline" />
      </layout>
    </appender>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <file value="Snapper.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10000KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level - %message%newline" />
      </layout>
    </appender>
    <appender name="POSReader" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <file value="POSReader.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10000KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level - %message%newline" />
      </layout>
    </appender>
    <appender name="IdentecDetachPlugin" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <file value="IdentecDetachPlugin.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10000KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level - %message%newline" />
      </layout>
    </appender>
    <appender name="IdentecAttach" type="log4net.Appender.RollingFileAppender">
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <file value="IdentecAttach.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10000KB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="TraceAppender" />
      <appender-ref ref="RollingFile" />
      <appender-ref ref="ConsoleAppender" />
    </root>
    <logger additivity="false" name="POSReader">
      <level value="DEBUG"/>
      <appender-ref ref="POSReader" />
    </logger>
    <logger additivity="false" name="IdentecDetachPlugin">
      <level value="DEBUG"/>
      <appender-ref ref="IdentecDetachPlugin" />
    </logger>
    <logger additivity="false" name="IdentecAttach">
      <level value="DEBUG"/>
      <appender-ref ref="IdentecAttach" />
    </logger>
  </log4net>

  <startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
